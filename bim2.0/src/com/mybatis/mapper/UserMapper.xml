<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper  
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mybatis.UserMapper">
  <select id="checkUser" parameterType="map" resultType="int">
        SELECT COUNT(*) 
        FROM USER
        WHERE 1=1
        <if test="username != null and username != ''">  
    	    and username = #{username}
        </if>
        <if test="password != null and password != ''">  
        	and password = #{password}
        </if>
        
   </select>
   
  <select id="checkByUsername" parameterType="map" resultType="int">
        SELECT COUNT(*) 
        FROM USER
        WHERE 1=1
        <if test="username != null and username != ''">  
    	    and username = #{username}
        </if>
   </select>
   
   <select id="getAllUsers" parameterType="map" resultType="com.model.User">
        SELECT *
        FROM USER
   </select>
   
   <insert id="addUsers" parameterType="map">
       INSERT INTO USER VALUES (#{username}, #{password}, #{name}, 
       #{company}, #{certification},#{country}, #{province}, #{city}, 
       #{company_type}, #{user_role})
   </insert>
   
   <delete id="deleteUser" parameterType="map">
       DELETE FROM USER WHERE username = #{username}
   </delete>
   
   <select id="getUserInfo" parameterType="map" resultType="com.model.User">
        SELECT *
        FROM USER
        WHERE 1=1
        <if test="username != null and username != ''">  
    	    and username = #{username}
        </if>
   </select>
   
   <update id="updateUsers" parameterType="map">
       UPDATE USER SET username=#{username},password=#{password},name=#{name},company=#{company},
       certification=#{certification},country=#{country},province=#{province},city=#{city},
       company_type=#{company_type},user_role=#{user_role} WHERE username=#{username}
   </update>
</mapper>